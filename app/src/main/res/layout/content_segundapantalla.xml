                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Shoradeimpresion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hra de impresion"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/titulociudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Sciudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ciudad"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/titulobloqueado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bloqueado"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Sbloqueado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bloqueado"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/titulofoliodesbloqueo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Folio desbloqueo"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Sdesbloqueo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="folio desbloqueo"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/titulostatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estatus"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Sestatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@android:string/status_bar_notification_info_overflow"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="statys" />

            <TextView
                android:id="@+id/tituloestadoped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
