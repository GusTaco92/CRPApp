<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/VistaCartaMedio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Venta"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/venta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="venta"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suma"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/SumaTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textStyle="italic"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bloqueado"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/TwBloq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bloqueado"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Folio Desbloq"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TwFolioDesbloq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Folio Desbloqueo"
                android:textStyle="italic"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estatus"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TwEstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estatus"
                android:textStyle="italic"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hra de Impresiòn"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/TwImpresion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de impresiòn"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:text="Cliente"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/N_Cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NCliente"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TwCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado Pedido"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TwEstadoPed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado Pedido"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

